.block12
  width 100%
  height auto
  background-color #0c0b10
  background-image  url("img/grain-texture.png")
  background-size auto
  background-position center center
  background-repeat repeat
  position relative


  .bg-block12
    background-image url("img/block12-bg.png")
    background-size 153%
    background-position 99% 1%
    background-repeat no-repeat
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    opacity 0.7
    @media (min-width 768px)
      background-size cover
    @media (min-width 1280px)
      background-size 53%
      background-position center
      opacity 1

  .block12-content
    width 100%
    height auto
    padding-top 35px
    padding-bottom 40px
    @media (min-width 768px)
      padding-top 70px
      padding-bottom 62px
    @media (min-width 1280px)
      justify-content center
      align-items center
      flex-direction row

    .block12-head
      width 100%
      height auto
      margin-bottom 60px
      z-index 1
      @media (min-width 768px)
        margin-bottom 80px
      @media (min-width 1280px)
        margin-bottom 0
        width 47%

      h2
        font-family 'BlissPro-Heavy'
        font-size 26px
        text-align center
        margin-bottom 10px
        color #FFFFFF
        @media (min-width 768px)
          font-size 38px
          margin-bottom 20px
          line-height 45px
        @media (min-width 1280px)
          text-align left
          font-size 64px
          line-height 70px

    form
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      z-index 2
      @media (min-width 1280px)
        width 42%
        align-items flex-end

      input
        width 100%
        max-width 300px
        height 50px
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        text-align center
        background transparent
        border-bottom 2px solid #ffffff
        border-top none
        border-left none
        border-right none
        color #ffffff
        font-family "BlissPro-Medium"
        font-size 16px
        font-weight 500
        margin-bottom 30px


      button
        margin-bottom 22px

      .check
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content flex-start
        align-items flex-start
        flex-direction row
        @media (min-width 1280px)
          width 52%

        input[type=checkbox]
          width 16px
          height 16px
          border-radius 2px
          border 2px solid #ffffff
          background transparent
          margin 5px 16px 0 0


        p
          text-align left
          color #ffffff
          font-family "BlissPro-LightItalic"
          font-size 16px
          font-weight 500