.block6
  width 100%
  height auto
  background-color #ffffff
  background-image url("img/block6-bg.png")
  background-size 100%
  background-position 50% 38%
  background-repeat no-repeat
  position relative
  @media (min-width 1280px)
    background-position 50% 42%
    background-size 73%
  @media (min-width 1280px)
    background-position 50% 52%
    background-size 1225px 602px

  .bg-block6
    width 100%
    height 83%
    background-image  url("img/grain-texture.png")
    background-size auto
    background-position center center
    background-repeat repeat
    position absolute
    top 0
    left 0

  .block6-content
    width 100%
    height auto
    padding-top 40px
    padding-bottom 40px
    box-sizing border-box
    @media (min-width 768px)
      padding-top 60px
      padding-bottom 60px
    @media (min-width 1280px)
      padding-top 64px
      padding-bottom 64px

    .block6-head
      width 100%
      height auto
      margin-bottom 128px
      @media (min-width 768px)
        margin-bottom 274px
      @media (min-width 1280px)
        margin-bottom 390px

      h2
        text-align center
        color #0c0b10

      p
        color #b53926
        text-align center
        font-size 20px
        font-family BlissPro-Light
        @media (min-width 768px)
          font-size 24px
        @media (min-width 1280px)
          font-size 32px

    .rec
      width 100%
      height auto

      .rec-block
        width 246px
        height auto
        border-radius 2px 2px 0 0
        background-color #ffffff
        margin 0 auto
        padding-top 20px
        padding-bottom 20px
        padding-left 15px
        padding-right 15px
        box-sizing border-box
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column

        @media (min-width 768px)
          width 590px
          padding-top 30px
          padding-bottom 30px
          padding-left 20px
          padding-right 20px
        @media (min-width 1280px)
          width 784px
          padding-top 40px
          padding-bottom 40px
          padding-left 24px
          padding-right 24px

        p
          color #0c0b10
          font-family "BlissPro-Medium"
          font-size 16px
          font-weight 500
          text-align center
          @media (min-width 768px)
            font-size 18px
            margin-bottom 20px


        a
          width 226px
          margin 0 auto
          @media (min-width 768px)
            width 384px
            height 64px


          button
            width 100%
            margin-top 30px
            @media (min-width 768px)
              width 384px
              height 64px
            @media (min-width 1280px)
              br
                display none
