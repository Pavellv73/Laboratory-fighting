header
  width 100%
  height auto
  position fixed
  top 0
  z-index 999

  .header-content
    width 100%
    height auto
    display flex
    display -webkit-flex
    justify-content space-between
    align-items flex-start
    flex-direction column
    box-sizing border-box
    position relative

    .head-top
      width 100%
      height auto
      background-color #0c0b10
      padding-top 8px
      padding-bottom 10px
      box-sizing border-box
      @media (min-width 768px)
        display flex
        display -webkit-flex
        justify-content space-between
        align-items center
        flex-direction row
        padding-top 10px
        padding-bottom 10px



      .head-text
        width 100%
        height auto
        @media (min-width 768px)
          width auto


        p
          color #ffffff
          font-family "BlissPro-LightItalic"
          font-size 14px
          font-weight 700
          @media (min-width 768px)
            font-size 16px


      .top-contact
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content space-between
        align-items center
        flex-direction row
        @media (min-width 768px)
          width 50%
          justify-content flex-end
          align-items center

        .top-time
          width auto
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction row
          @media (min-width 768px)
            margin-right 25px

          img
            width 14px
            height 17px
            margin-right 8px
            @media (min-width 768px)
              width 15px
              height 18px
          p
            color #FFFFFF
            font-family "BlissPro-Light"
            @media (min-width 768px)
              font-size 16px
              text-align right

        .top-mail
          width auto
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction row

          img
            width 14px
            height 17px
            margin-right 8px
            @media (min-width 768px)
              width 15px
              height 18px

          a
            color #FFFFFF
            font-family "BlissPro-Light"
            cursor pointer
            @media (min-width 768px)
              font-size 16px
              text-align right





    .logo-menu
      width 100%
      height auto
      background-color #FFFFFF
      display flex
      display -webkit-flex
      justify-content space-between
      align-items center
      flex-direction row
      padding-top 8px
      padding-bottom 8px
      box-sizing border-box

      @media (min-width 768px)
        padding-top 16px
        padding-bottom 13px
        align-items center

      .logo
        width 50%
        height auto
        display flex
        display -webkit-flex
        justify-content flex-start
        align-items center
        @media (min-width 768px)
          width 112px

        img
          width auto
          height 29px
          @media (min-width 768px)
            width 100%
            height 45px

      .menu-hamburger
        position relative
        @media (min-width 768px)
          display none

        .block-menu
          width auto
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction row
          @media (min-width 1280px)
            display none

          .burger
            width 24px
            height 24px
            cursor pointer
            display flex
            display -webkit-flex
            justify-content center
            align-items flex-end
            flex-direction column
            @media (min-width 768px)
              display none

            .line1, .line3
              width 24px
              height 2px
              background-color #0c0b10
              transition all 0.5s

            .line2
              width 24px
              height 2px
              background-color #0c0b10
              margin 5px 0
              transition all 0.5s

            .block1-click
              transform rotate(45deg)
              transition all 0.5s
            .block2-click
              display none
              overflow hidden
              transition all 0.5s
            .block3-click
              transform rotate(-45deg)
              transition all 0.5s



      .menu
        display none
        background-color #FFFFFF
        position absolute
        top 110px
        left 0
        width 100%
        height 100vh
        box-shadow inset 0px 5px 5px -3px rgba(0,0,0,0.55)
        padding-top 30px
        box-sizing border-box
        z-index 1px
        @media (min-width 768px)
          display block
          position relative
          box-shadow none
          padding-top 0
          height auto
          width 80%
          top 0
        @media (min-width 1280px)
          width 100%



        .menu-content
          width 100%
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction column
          @media (min-width 768px)
            flex-direction row
            justify-content space-between


          .address
            width 100%
            height auto
            display flex
            display -webkit-flex
            justify-content center
            align-items center
            flex-direction column
            margin-bottom 30px
            @media (min-width 768px)
              margin-bottom 0
              flex-direction row
              width 53%
              margin-right 5px
            @media (min-width 1280px)
              width 35%
              margin-right 102px


            img
              margin-bottom 10px
              @media (min-width 768px)
                margin-bottom 0
                margin-right 8px

            p
              color #0c0b10
              font-family "BlissPro-Bold"
              font-size 18px
              font-weight 700
              text-align center
              @media (min-width 768px)
                font-size 15px
                br
                  display none
              @media (min-width 1280px)
                font-size 18px
                text-align left

          .phone
            width 100%
            height auto
            display flex
            display -webkit-flex
            justify-content center
            align-items center
            flex-direction column
            margin-bottom 30px
            @media (min-width 768px)
              width auto
              margin-bottom 0
            @media (min-width 1280px)
              flex-direction row

            img
              margin-bottom 10px
              @media (min-width 768px)
                margin-bottom 0
              @media (min-width 1280px)
                margin-right 8px

            a
              color #0c0b10
              font-family "BlissPro-Bold"
              font-size 18px
              font-weight 700
              text-align center
              @media (min-width 768px)
                display none
              @media (min-width 1280px)
                display block
                font-size 22px

          .social-icons
            width 100%
            height auto
            display flex
            display -webkit-flex
            justify-content center
            align-items center
            flex-direction row
            @media (min-width 768px)
              width auto
              justify-content flex-end
              align-items flex-end


            a
              margin-right 10px
              margin-left 10px
              transition all 0.2s ease
              display flex
              display -webkit-flex
              justify-content center
              align-items center
              transition all 0.2s ease
              @media (min-width 768px)
                width 23px
                height 23px
                align-items center
              &:hover
                img
                  transition all 0.2s ease
                  filter grayscale(100%)
              &:active
                img
                  transition all 0.2s ease
                  filter grayscale(200%)












