.block1
  margin-top 110px
  width 100%
  height auto
  background-image url("img/block1-bg-mob.png")
  background-color #0C0B10
  background-position center top
  background-repeat no-repeat
  background-size 100%
  position relative
  @media (min-width 768px)
    background-image url("img/block1-bg.png")
    background-size 160%
  @media (min-width 1280px)
    background-size 100%
    padding-bottom 64px
    box-sizing border-box
    background-size 1280px 608px

  .bg-block1
    width 100%
    height 100%
    background-image  url("img/grain-texture.png")
    background-size auto
    background-position center center
    background-repeat repeat
    position absolute
    top 0
    left 0



  .block1-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column

    .block1-head
      width 100%
      height auto
      margin-top 138px
      margin-bottom 53px
      @media (min-width 768px)
        margin-top 217px
        margin-bottom 59px

      h1
        text-align center
        line-height 35px
        @media (min-width 768px)
          max-width 700px
          line-height 54px
        @media (min-width 1280px)
          max-width 1184px
          line-height 70px

    .advantages-blocks
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center

      flex-flow row wrap

      .advantage-block
        width auto
        height auto
        margin-left 15px
        margin-right 15px
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        margin-bottom 32px
        @media (min-width 1280px)
          margin-bottom 0
          width 20%
          margin-right 0
          margin-left 0

        img
          margin-bottom 12px
          @media (min-width 768px)
            margin-bottom 25px

        p
          text-align center
          line-height 18px
          color #FFFFFF
