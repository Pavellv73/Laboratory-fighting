h()
  columns = 0 1 2 3 4
  for col in columns
    .h-{col}
      width (col/columns[-1]*100) + '%'
      flex-basis auto
      box-sizing border-box
      display block
      padding-left 5px
      padding-right 5px
  for col in columns
    .h-offset-{col}
      margin-left: (col/columns[-1]*100) + '%'

t()
  columns = 0 1 2 3 4
  for col in columns
    .t-{col}
      width (col/columns[-1]*100) + '%'
      flex-basis auto
      box-sizing border-box
      display block
      padding-left 11px
      padding-right 11px
  for col in columns
    .t-offset-{col}
      margin-left: (col/columns[-1]*100) + '%'

d()
  columns = 0 1 2 3 4
  for col in columns
    .d-{col}
      width (col/columns[-1]*100) + '%'
      flex-basis auto
      box-sizing border-box
      display block
      padding-left 20px
      padding-right 20px
  for col in columns
    .d-offset-{col}
      margin-left: (col/columns[-1]*100) + '%'

d-screen = 1280px
t-screen = 768px
h-screen = 320px

.cnt
  box-sizing border-box
  padding 0 12px
  width: 100%
  @media(min-width: t-screen)
    padding 0 29px
    width 100%
  @media(min-width: d-screen)
    padding 0 48px
    margin 0 auto

.row
  max-width 1280px
  flex-basis 100%
  margin 0 auto
  flex-grow 1
  display flex
  display -webkit-flex
  flex-flow column
  justify-content flex-start
  align-content flex-start


h1
  text-shadow 0 2px 4px rgba(0, 0, 0, 0.5)
  color #ffffff
  font-family "BlissPro-Medium"
  font-size 28px
  font-weight 800
  text-transform uppercase
  @media (min-width 768px)
    font-size 48px
    line-height 54px
  @media (min-width 1280px)
    font-size 64px
    line-height 70px

h2
  color #b03725
  font-family "BlissPro-Heavy"
  font-size 22px
  font-weight 800
  @media (min-width 768px)
    font-size 26px
    letter-spacing 0.44px
    line-height 28px
  @media (min-width 1280px)
    font-size 36px
    line-height 38px


p
  color #ffffff
  font-family "BlissPro-Medium"
  font-size 14px
  font-weight 700
  @media (min-width 768px)
    font-size 18px
  @media (min-width 1280px)
    font-size 20px

.button-red
  width 284px
  height 64px
  box-shadow inset 0 -4px 0 rgba(0, 0, 0, 0.5)
  border-radius 2px
  background-color #b03725
  background-image linear-gradient(180deg, #ff5238 0%, #b03725 100%)
  transition all 0.2s ease
  text-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
  color #ffffff
  font-family "BlissPro-Medium"
  font-size 18px
  font-weight 800
  text-transform uppercase
  border none
  cursor pointer
  &:hover
    box-shadow inset 0 -6px 0 rgba(0, 0, 0, 0.5)
    border-radius 2px
    background-color #b03725
    background-image linear-gradient(180deg, #ff5238 0%, #d9452f 100%)
  &:active
    box-shadow inset 0 -2px 0 rgba(0, 0, 0, 0.5)
    border-radius 2px
    background-color #812b22
    padding-top 6px

.button-gray
  width 234px
  height 64px
  box-shadow inset 0 -4px 0 rgba(0, 0, 0, 0.3)
  border-radius 2px
  background-color #878689
  transition all 0.2s ease
  color #ffffff
  font-family "BlissPro-Light"
  font-size 18px
  font-weight 700
  border none
  cursor pointer

  &:hover
    box-shadow inset 0 -6px 0 rgba(0, 0, 0, 0.3)
    border-radius 2px
    background-color #878689


.button-red-tab
  width 234px
  height 64px
  box-shadow inset 0 -4px 0 rgba(0, 0, 0, 0.3)
  border-radius 2px
  background-color #dc4630
  transition all 0.2s ease
  color #ffffff
  font-family "BlissPro-Light"
  font-size 18px
  font-weight 700
  border none
  cursor pointer
  &:hover
    box-shadow inset 0 -4px 0 rgba(0, 0, 0, 0.3)
    border-radius 2px
    background-color #b03725


