.block8
  width 100%
  height auto
  background-color #FFFFFF

  .block8-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    box-sizing border-box
    padding-top 40px
    @media (min-width 768px)
      padding-top 60px
    @media (min-width 1280px)
      padding-top 64px

    .block8-head
      width 100%
      height auto
      margin-bottom 40px
      @media (min-width 768px)
        margin-bottom 60px
      @media (min-width 1280px)
        margin-bottom 64px

      h2
        font-size 22px
        text-align center
        color #0c0b10
        @media (min-width 768px)
          font-size 26px
        @media (min-width 1280px)
          font-size 36px

    .treners-blocks
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column


      .trener-block
        width 100%
        height auto
        background-color #FFFFFF
        margin-bottom 20px
        @media (min-width 768px)
          margin-bottom 32px
        @media (min-width 1280px)
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction row-reverse
        &:nth-of-type(odd)
          background-color #f4f4f4
          @media (min-width 1280px)
            flex-direction row

        .trener-img
          width 100%
          height 175px
          overflow hidden
          display flex
          display -webkit-flex
          justify-content flex-start
          align-items flex-start
          @media (min-width 768px)
            height auto
          @media (min-width 1280px)
            width 384px
            justify-content center
            align-items center

          img
            width 100%
            height auto
            @media (min-width 1280px)
              height 100%
              width auto

        .trener-text
          width 100%
          height auto
          padding 20px 20px
          box-sizing border-box
          @media (min-width 768px)
            padding 30px 30px


          h3
            color #b03725
            font-family "BlissPro-Heavy"
            font-size 18px
            font-weight 800
            text-transform uppercase
            text-align left
            margin-bottom 10px
            @media (min-width 768px)
              font-size 20px



          p
            color #0c0b10
            font-family "BlissPro-Bold"
            font-size 16px
            font-weight 500
            text-align left
            margin-bottom 10px
            @media (min-width 768px)
              font-size 18px

          span
            color #b03725
            font-family "BlissPro-Medium"
            font-size 16px
            font-weight 700
            text-align left
